{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lambda",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.lambda",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lambda",
          "match": "\\b(if|then|else|let|in|fix)\\b"
        },
        {
          "name": "keyword.other.lambda",
          "match": "\\b(ref)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.lambda",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.language.lambda",
          "match": "\\b(zero|empty|nil)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.lambda",
          "match": "(\\+|\\-|\\*|\\/|=|:=|!|::|;;|\\\\|\\.|->)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.lambda",
          "match": "\\b(head|tail)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.lambda",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.lambda",
          "match": "\\\\."
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.lambda",
          "match": "\\b[a-z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.lambda"
}
